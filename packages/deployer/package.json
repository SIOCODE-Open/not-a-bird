{
    "name": "@not-a-bird/deployer",
    "version": "0.0.1",
    "private": true,
    "main": "index.bundle.js",
    "scripts": {
        "copy": "node copy-contracts.js",
        "build": "esbuild --platform=node --bundle --minify --outfile=index.bundle.js src/index.ts",
        "start": "node index.bundle.js",
        "extract": "node extract-metadata.js",
        "debug:build": "esbuild --platform=node --bundle --minify --outfile=debug.bundle.js src/debug.ts",
        "debug:start": "node debug.bundle.js",
        "debug-deploy": "npm run debug:build && npm run debug:start"
    },
    "dependencies": {
        "@polkadot/api": "*",
        "@polkadot/api-contract": "*",
        "@not-a-bird/model": "*",
        "listr2": "*",
        "yaml": "*",
        "chalk": "*"
    },
    "devDependencies": {
        "esbuild": "*",
        "typescript": "*"
    }
}