{
    "name": "@not-a-bird/app-game",
    "version": "0.0.1",
    "private": true,
    "dependencies": {},
    "devDependencies": {
        "esbuild": "*",
        "typescript": "*",
        "concurrently": "*",
        "sass": "*"
    },
    "scripts": {
        "build:js": "esbuild --platform=browser --bundle --minify --sourcemap --outfile=public/index.bundle.js src/index.ts",
        "build:css": "sass src/index.scss public/index.bundle.css",
        "build": "npm run build:js",
        "serve:js": "esbuild --platform=browser --bundle --sourcemap --outfile=public/index.bundle.js --serve=0.0.0.0:5000 --servedir=public src/index.ts",
        "serve:css": "sass src/index.scss public/index.bundle.css --watch",
        "serve": "concurrently \"npm run serve:js\" \"npm run serve:css\" -n \"JS,CSS\""
    }
}